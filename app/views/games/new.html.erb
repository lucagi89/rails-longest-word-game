
  <h1>New Game</h1>
  <div class="controller d-flex justify-content-between align-items-center m-10" style="width: 700px; height: 100px; font-size: 30px;">
  <%@letters.each do |letter|%>

  <h1 class="bg-primary text-white text-center" style="width:50px; height:50px">
  <%= letter %>
  </h1>

  <%end%>
  </div>
  <form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value="<%= @letters.join %>">
    <label for="word">What is the longest word that you can find?</label>
    <input type="text" name="word" id="word">
    <input type="submit" value="Play!">
  </form>
